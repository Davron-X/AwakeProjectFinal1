@model Product

<form method="post" asp-action="Delete">
    <div class="border p-3 ">      
        <div class="form-group row">
            <h2 class="text-black pl-3">Изменение продукта</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <input disabled asp-for="Id" hidden />
                <div class="form-group row pt-4">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Name" class="form-control" />
                    </div>
                </div>

                <div class="form-grop row pt-3">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Price" class="form-control" />
                    </div>
                </div>
                <div class="form-grop row pt-3">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Description" class="form-control" />
                    </div>
                </div>
                <div class="form-grop row pt-3">
                    <div class="col-4">
                        <label asp-for="ShortDesc"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ShortDesc" class="form-control" />
                        <span asp-validation-for="ShortDesc" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-grop row pt-3">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">

                        <select disabled asp-for="Category!.Id" class="form-control">
                            <option  selected>@Model.Category!.Name</option>
                        </select>
                    </div>
                </div>

                <div class="form-grop row pt-3">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <select disabled asp-for="ApplicationTypeId" class="form-control">
                            <option  selected>@Model.ApplicationType!.Name</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row pt-3">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-warning w-100">Назад</a>
                        </div>
                        <div class="col">
                            <input type="submit" value="Удалить" class="btn btn-danger w-100" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                <img src="@WC.ProductImgPath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />

            </div>
        </div>
    </div>

</form>

