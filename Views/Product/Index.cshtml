@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Продукты</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-success" >
                <i class="far fa-plus-square"></i>&nbsp; Добавить новый продукт
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-secondary" style="width:100%">
            <thead class="table-primary">
                <tr>
                    <th>
                       Название
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>
                       Категория
                    </th>
                    <th>
                        Тип
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="40%">@obj.Name</td>
                        <td width="20%" class="text-center">@obj.Price</td>
                        <td width="20%">@obj.Category!.Name</td>
                        <td width="20%">@obj.ApplicationType!.Name</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-action="Edit" asp-controller="Product" asp-route-id="@obj.Id" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                                <a asp-action="Delete" asp-controller="Product" asp-route-id="@obj.Id" class="btn btn-danger"> <i class="fas fa-trash"></i>  </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> Нет продуктов</p>
    }

</div>


